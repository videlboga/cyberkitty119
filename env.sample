# Cyberkitty19 Transkribator - Переменные окружения
# Скопируйте этот файл в .env и заполните своими значениями

# ===== ОСНОВНЫЕ НАСТРОЙКИ TELEGRAM БОТА =====
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ===== НАСТРОЙКИ ДЛЯ PYROGRAM ВОРКЕРА (для больших видео) =====
PYROGRAM_WORKER_ENABLED=true
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
PYROGRAM_WORKER_CHAT_ID=0

# ===== НАСТРОЙКИ ДЛЯ TELETHON ВОРКЕРА (альтернатива) =====
TELETHON_WORKER_CHAT_ID=0

# ===== API КЛЮЧИ ДЛЯ ТРАНСКРИБАЦИИ И ФОРМАТИРОВАНИЯ =====
# OpenAI API (для GPT моделей)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API (для Claude, Gemini и других моделей)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# DeepInfra API (альтернативный провайдер)
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# Replicate API (для Whisper транскрибации)
REPLICATE_API_TOKEN=your_replicate_token_here
REPLICATE_WHISPER_MODEL=carnifexer/whisperx
REPLICATE_WHISPER_DIARIZATION_MODEL=thomasmol/whisper-diarization

# ===== НАСТРОЙКИ БАЗЫ ДАННЫХ =====
DATABASE_URL=sqlite:///app/data/cyberkitty19_transkribator.db

# ===== МОНИТОРИНГ И УВЕДОМЛЕНИЯ =====
# Chat ID для отправки уведомлений о проблемах (опционально)
HEALTH_CHECK_CHAT_ID=your_admin_chat_id_here

# ===== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ =====
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Максимальный размер файла для прямой загрузки (в МБ)
MAX_DIRECT_DOWNLOAD_SIZE=20

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Local Bot API Configuration
USE_LOCAL_BOT_API=true
LOCAL_BOT_API_URL=http://telegram-bot-api:8081

# AI Services Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Database Configuration
DATABASE_URL=sqlite:///app/data/cyberkitty19_transkribator.db

# Application Configuration
DEBUG=false

# File Size Limits
MAX_FILE_SIZE_MB=2000
MAX_AUDIO_DURATION_MINUTES=240

# Processing Configuration
ENABLE_LLM_FORMATTING=true
ENABLE_SEGMENTATION=true
SEGMENT_DURATION_SECONDS=30 